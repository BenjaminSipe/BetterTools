{
	"schemaVersion": 1,
	"id": "bettertools",
	"version": "${version}",
	"name": "Better Tools",
	"description": "This is an example description! Tell everyone what your mod is about!",
	"authors": [
		"rockgiant"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "MIT License",
	"icon": "assets/modid/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"net.rockgiant.bettertools.BetterTools"
		],
		"client": [
			"net.rockgiant.bettertools.BetterToolsClient"
		],
		"fabric-datagen": [
			"net.rockgiant.bettertools.BetterToolsDataGenerator"
		]
	},
	"mixins": [
		"bettertools.mixins.json",
		{
			"config": "bettertools.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.14.22",
		"minecraft": "~1.20.2",
		"java": ">=17",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
